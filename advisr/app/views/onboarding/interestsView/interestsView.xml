<Page loaded="pageLoaded" xmlns="http://schemas.nativescript.org/tns.xsd"  navigatingTo="pageNavigating" id="interestsPage" xmlns:Slides="nativescript-slides">
	<StackLayout class="center">
		<Label text="advisr" class="title"/>
		<StackLayout>
			<Slides:SlideContainer id="slides-container" height="60%" pageIndicators="true">
				<Slides:Slide class="slide" swipe="changeSlide">
					<StackLayout>
						<Label text="Welcome to advisr, Jane!"/>
						<Label text="Which of the following best describes you?" class="question"/>
						<StackLayout orientation="horizontal" class="buttons">
							<Button text="Declared" tap="changeSlide" class="buttonOption purple"/>
							<Button text="Deciding" tap="changeSlide" class="buttonOption blue"/>
							<Button text="Exploring" tap="changeSlide" class="buttonOption green"/>
						</StackLayout>
					</StackLayout>
				</Slides:Slide>
				<Slides:Slide class="slide" disablePan="true">
					<StackLayout>
						<Label text="Add up to 3 majors and minors that you are considering." class="question"/>
						<StackLayout orientation="horizontal" class="centerDiv">
							<StackLayout class="majors">
								<Label text="Majors" class="listHeader"/>
								<StackLayout orientation="horizontal">
									<Label text="Major 1: "/>
									<Button text="{{major1}}" tap="showMajor1Picker"/>
								</StackLayout>
								<StackLayout orientation="horizontal">
									<Label text="Major 2: "/>
									<Button text="{{major2}}" tap="showMajor2Picker"/>
								</StackLayout>
								<StackLayout orientation="horizontal" visibility="{{ showMajor3 ? 'visible' : 'collapse'}}">
									<Label text="Major 3: "/>
									<Button text="{{major3}}" tap="showMajor3Picker"/>
								</StackLayout>
								<Button text="+" tap="addMajorField" id="addMajor" visibility="{{ showMajor3 ? 'collapse' : 'visible'}}"/>
							</StackLayout>
							<StackLayout class="minors">
								<Label text="Minors" class="listHeader"/>
								<StackLayout orientation="horizontal">
									<Label text="Minor 1: "/>
									<Button text="{{minor1}}" tap="showMinor1Picker"/>
								</StackLayout>
								<StackLayout orientation="horizontal">
									<Label text="Minor 2: "/>
									<Button text="{{minor2}}" tap="showMinor2Picker"/>
								</StackLayout>
								<StackLayout orientation="horizontal" visibility="{{ showMinor3 ? 'visible' : 'collapse'}}">
									<Label text="Minor 3: "/>
									<Button text="{{minor3}}" tap="showMinor3Picker"/>
								</StackLayout>
								<Button text="+" tap="addMinorField" id="addMinor" visibility="{{ showMinor3 ? 'collapse' : 'visible'}}"/>
							</StackLayout>
						</StackLayout>
					</StackLayout>
				</Slides:Slide>
				<Slides:Slide class="slide" swipe="goToDashboard" disablePan="true">
					<StackLayout>
						<Label class="question" text="What are you interested in? Select all that apply."/>
						<ListView items="{{interests}}" separatorColor="#FFFFFF" height="55%" id="interest-list-view" visibility="{{interests.length ? 'visible' : 'collapse'}}">
							<ListView.itemTemplate>
							<GridLayout columns="*,*,*" rows="auto" backgroundColor="#FFFFFF">
								 <StackLayout orientation="vertical" class="grid-cell-layout" col="0" row="0" class="interestButtons" tap="itemTap" id="{{one}}">
								 	<Button text="{{one}}" tap="buttonTap"/>
								 </StackLayout>
								 <StackLayout orientation="vertical" class="grid-cell-layout" col="1" row="0" class="interestButtons" tap="itemTap" id="{{two}}">
								 	<Button text="{{two}}" tap="buttonTap"/>
								 </StackLayout>
								 <StackLayout orientation="vertical" class="grid-cell-layout" col="2" row="0" class="interestButtons" tap="itemTap" id="{{three}}">
								 	<Button text="{{three}}" tap="buttonTap"/>
								 </StackLayout>
							</GridLayout>
						 </ListView.itemTemplate>
          				</ListView>
          				<Button text="View my results" class="finishButton" tap="finish"/>
					</StackLayout>
				</Slides:Slide>

			</Slides:SlideContainer>

			<ListPicker id="major1picker" items="{{ majorList }}" visibility="{{showMajor1Picker ? 'visible' : 'collapse'}}"/>
			<Button text="Done" tap="getMajor1SelectedIndex"  visibility="{{ showMajor1Picker ? 'visible' : 'collapse'}}"/>

			<ListPicker id="major2picker" items="{{ majorList }}" visibility="{{showMajor2Picker ? 'visible' : 'collapse'}}"/>
			<Button text="Done" tap="getMajor2SelectedIndex"  visibility="{{ showMajor2Picker ? 'visible' : 'collapse'}}"/>

			<ListPicker id="major3picker" items="{{ majorList }}" visibility="{{showMajor3Picker ? 'visible' : 'collapse'}}"/>
			<Button text="Done" tap="getMajor3SelectedIndex"  visibility="{{ showMajor3Picker ? 'visible' : 'collapse'}}"/>

			<ListPicker id="minor1picker" items="{{ majorList }}" visibility="{{showMinor1Picker ? 'visible' : 'collapse'}}"/>
			<Button text="Done" tap="getMinor1SelectedIndex"  visibility="{{ showMinor1Picker ? 'visible' : 'collapse'}}"/>

			<ListPicker id="minor2picker" items="{{ majorList }}" visibility="{{showMinor2Picker ? 'visible' : 'collapse'}}"/>
			<Button text="Done" tap="getMinor2SelectedIndex"  visibility="{{ showMinor2Picker ? 'visible' : 'collapse'}}"/>

			<ListPicker id="minor3picker" items="{{ majorList }}" visibility="{{showMinor3Picker ? 'visible' : 'collapse'}}"/>
			<Button text="Done" tap="getMinor3SelectedIndex"  visibility="{{ showMinor3Picker ? 'visible' : 'collapse'}}"/>

		</StackLayout>
		
	</StackLayout>
	 
</Page>