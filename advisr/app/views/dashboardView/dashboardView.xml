<Page loaded="pageLoaded" xmlns="http://schemas.nativescript.org/tns.xsd"  navigatingTo="pageNavigating" id="dashboardPage"
	xmlns:sd="nativescript-pro-ui/sidedrawer"
	xmlns:sidedrawer="shared/sd"
	xmlns:pb="nativescript-progressbar"
	xmlns:Card="nativescript-cardview">

	  <ActionBar class="action-bar">
		    <ActionBar.titleView>
		      <Label text="Dashboard" horizontalAlignment="center" class="action-bar-title" />
		    </ActionBar.titleView>
	    	<!-- <NavigationButton tap="toggleDrawer" text="Menu" ios.position="left" /> -->
		</ActionBar>

		<sd:RadSideDrawer id="sideDrawer" showOverNavigation="true">
		  <sd:RadSideDrawer.drawerContent>
		    <sidedrawer:sd/>
		 </sd:RadSideDrawer.drawerContent>

		 <sd:RadSideDrawer.mainContent horizontalAlignment="center">
		 	<StackLayout>
			 	<!-- Title -->
				<StackLayout orientation="vertical" class="dashboardTitle">
					<Label text="{{title}}" horizontalAlignment="center" />
				</StackLayout>
				
				<Card:CardView class="cardStyle" margin="10" elevation="40" radius="5">
				<GridLayout columns="*,*,*,*" rows="*, *" id="grid">
					<!-- Card1 -->
					<StackLayout class="card" id="firstCard" colSpan="3">
						<StackLayout orientation="horizontal">
							<Label text="Summary:" class="cardTitle"/>
							<Label text="{{date}}" class="cardTitle"/>
						</StackLayout>
						<Label text="{{userInfo}}" textWrap="true" class="cardSubtitle"/>
						<GridLayout columns="*, *, *" rows="*" id="panels">
							<StackLayout col="0" class="panelCard">
								<Label text="60 units" class="infoTitle green"/>
								<Label text="complete" class="infoSubtitle green"/>
							</StackLayout>
							<StackLayout col="1" class="panelCard">
								<Label text="130 units" class="infoTitle red" />
								<Label text="incomplete" class=" infoSubtitle red"/>
							</StackLayout>
							<StackLayout col="2" class="panelCard">
								<Label text="90 units" class="infoTitle purple" />
								<Label text="required for major" class="infoSubtitle purple"/>
							</StackLayout>
						</GridLayout>
					</StackLayout>
					<!-- Card2 -->
					<StackLayout class="card" id="secondCard" col="4">
						<Label text="Future Units Per Quarter" textWrap="true" class="cardTitle" tap="viewSchedule"/>
						<Label text="16"/>
					</StackLayout>
					<!-- Card3 -->
					<StackLayout class="card" id="thirdCard" row="1">
						<Label text="Major 1:" class="cardTitle" tap="viewMoreMajor1"/>
						<Label text="{{major1}}" class="cardSubtitle"/>
					</StackLayout>
					<!-- Card4 -->
					<StackLayout class="card" id="fourthCard" row="1" col="1" visibility="{{showSecond ? 'visible' : 'collapse'}}">
						<Label text="Major 2:" class="cardTitle" tap="viewMoreMajor2"/>
						<Label text="{{major2}}" class="cardSubtitle"/>
					</StackLayout>
					<!-- Card4 -->
					<StackLayout class="card" id="fifthCard" row="1" col="2" visibility="{{showThird ? 'visible' : 'collapse'}}">
						<Label text="Major 3:" class="cardTitle" tap="viewMoreMajor3"/>
						<Label text="{{major3}}" class="cardSubtitle"/>
					</StackLayout>
					<!-- Card5 -->
					<StackLayout class="card" id="sixthCard" row="1" col="{{GERcol}}" colSpan="{{GERspan}}">
						<Label text="General Requirements:" textWrap="true" class="cardTitle" tap="viewMoreGER" />
						<Label text="GER" class="cardSubtitle"/>
					</StackLayout>
				</GridLayout>
			</Card:CardView>
			</StackLayout>


		 </sd:RadSideDrawer.mainContent>
		</sd:RadSideDrawer>
</Page>