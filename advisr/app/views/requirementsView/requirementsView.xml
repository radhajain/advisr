<Page loaded="pageLoaded" xmlns="http://schemas.nativescript.org/tns.xsd"  navigatingTo="pageNavigating" id="dashboardPage" class="page"
	xmlns:sd="nativescript-pro-ui/sidedrawer"
	xmlns:sidedrawer="shared/sd"
	xmlns:pb="nativescript-progressbar"
	xmlns:Card="nativescript-cardview">


	<Page.actionBar>
	  <ActionBar class="action-bar" title="Dashboard">
		    <ActionBar.titleView>
				<StackLayout orientation="horizontal" >
					<Button text="&#xf015;    Home" tap="viewSchedule" class="fa menuButton"/>
		         	<Button text="&#xf073;    Schedule" tap="viewSchedule" class="fa menuButton"/>
		         	<Button text="&#xf14a;    Classes" tap="viewRequirements" class="fa menuButton"/>
					<Button text="&#xf08b;    Logout" tap="viewLogout" class="fa menuButton"/>
	            </StackLayout>
		    </ActionBar.titleView>
		</ActionBar>
	</Page.actionBar>


	<!-- Page content -->
 	<StackLayout orientation="vertical">
 		<Label text="Course Requirements" class="pageTitle"/>
 		<StackLayout orientation="horizontal">

 			<StackLayout col="0" class="sideBar">
		 	 	<StackLayout orientation="vertical">
 	 				<Label text="View plans for: " class="sideBarText"/>
		 	 		<Button text="Major 1"  tap="" class="selectorButton"/>
			 	 	<Button text="Major 2" tap="" class="selectorButton"/>
			 	 	<Button text="Major 3" tap="" class="selectorButton"/>
			 	 	<Button text="GERs" tap="" class="selectorButton"/>
			 	 	<Button text="REQUIREMENTS DETAIL" tap="viewMoreMajor1" class="selectorButton"/>
			 	</StackLayout>
	 		</StackLayout>




	 		<StackLayout >
	 			<Label text="XYZ Requirements" class="contentTitle"/>
	 		</StackLayout>

 		</StackLayout>



	 	





	</StackLayout>


</Page>