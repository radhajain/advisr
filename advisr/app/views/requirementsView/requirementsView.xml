<Page loaded="pageLoaded" xmlns="http://schemas.nativescript.org/tns.xsd"  navigatingTo="pageNavigating" id="dashboardPage"
	xmlns:sd="nativescript-pro-ui/sidedrawer"
	xmlns:sidedrawer="shared/sd"
	xmlns:pb="nativescript-progressbar"
	xmlns:Card="nativescript-cardview">

	  <ActionBar class="action-bar">
		    <ActionBar.titleView>
		      <Label text="Dashboard" horizontalAlignment="center" class="action-bar-title" />
		    </ActionBar.titleView>
	    	<NavigationButton tap="toggleDrawer" text="Menu" ios.position="left" />
		</ActionBar>

		<sd:RadSideDrawer id="sideDrawer" showOverNavigation="true">
		  <sd:RadSideDrawer.drawerContent>
		    <sidedrawer:sd/>
		 </sd:RadSideDrawer.drawerContent>

		 <sd:RadSideDrawer.mainContent horizontalAlignment="center">
		 	<StackLayout>
			 	<!-- Title -->
				<StackLayout orientation="vertical" class="dashboardTitle">
					<Label text="Your Requirements" horizontalAlignment="center" />
				</StackLayout>
				
				<Card:CardView class="cardStyle" margin="10" elevation="40" radius="5">
				<GridLayout id="grid" columns="*" rows="auto" >
					<StackLayout>
					<!-- Card2 -->
					<StackLayout class="card" id="secondCard" row="1" tap="viewMoreMajor1">
						<StackLayout orientation="horizontal">
							<Label text="Major 1:" class="cardTitle"/>
							<Label text="{{major1}}" class="cardTitle"/>
						</StackLayout>
						<GridLayout id="major1grid" columns="*, *, *" rows="auto" >
							<StackLayout col="0" class="details">
								<Label text="Overall: " class="classesLabel"/>
								<StackLayout class="padding">
									<Label text="{{major1Complete}}" class="progressNumber"/>
									<Label text="complete" class="smallLabel"/>
								</StackLayout>
							</StackLayout>
							<StackLayout col="1">
								<Label text="Core: " class="classesLabel"/>
								<StackLayout class="padding">
									<Label text="{{major1coreComplete}}" class="progressNumber"/>
									<Label text="complete" class="smallLabel"/>
								</StackLayout>
							</StackLayout>
							<StackLayout col="2">
								<Label text="Electives: " class="classesLabel"/>
								<StackLayout class="padding">
									<Label text="{{major1electivesComplete}}"/>
									<Label text="complete" class="smallLabel"/>
								</StackLayout>
							</StackLayout>
						</GridLayout>

							<Label text="More >" tap="viewMoreMajor1" class="more"/>
						
					</StackLayout>
					<!-- Card3 -->
					<StackLayout class="card" id="thirdCard" row="2" visibility="{{secondMajor ? 'visible' : 'collapse'}}" tap="viewMoreMajor2">
						<StackLayout orientation="horizontal">
							<Label text="Major 2:" class="cardTitle"/>
							<Label text="{{major2}}" class="cardTitle"/>
						</StackLayout>
						<GridLayout id="major2grid" columns="*, *, *" rows="auto" >
							<StackLayout col="0" class="details">
								<Label text="Overall: " class="classesLabel"/>
								<StackLayout class="padding">
									<Label text="{{major2Complete}}" class="progressNumber"/>
									<Label text="complete" class="smallLabel"/>
								</StackLayout>
							</StackLayout>
							<StackLayout col="1">
								<Label text="Core: " class="classesLabel"/>
								<StackLayout class="padding">
									<Label text="{{major2coreComplete}}"/>
									<Label text="complete" class="smallLabel"/>
								</StackLayout>
							</StackLayout>
							<StackLayout col="2">
								<Label text="Electives: " class="classesLabel"/>
								<StackLayout class="padding">
									<Label text="{{major2electivesComplete}}"/>
									<Label text="complete" class="smallLabel"/>
								</StackLayout>
							</StackLayout>
						</GridLayout>
						<Label text="More >" tap="viewMoreMajor2" class="more"/>
					</StackLayout>
				
						<!-- Card3 -->
					<StackLayout class="card" id="fourthCard" row="2" visibility="{{thirdMajor ? 'visible' : 'collapse'}}" tap="viewMoreMajor3">
						<StackLayout orientation="horizontal">
							<Label text="Major 3:" class="cardTitle"/>
							<Label text="{{major3}}" class="cardTitle"/>
						</StackLayout>
						<GridLayout id="major3grid" columns="*, *, *" rows="auto" >
							<StackLayout col="0" class="details">
								<Label text="Overall: " class="classesLabel"/>
								<StackLayout class="padding">
									<Label text="{{major3Complete}}" class="progressNumber"/>
									<Label text="complete" class="smallLabel"/>
								</StackLayout>
							</StackLayout>
							<StackLayout col="1">
								<Label text="Core: " class="classesLabel"/>
								<StackLayout class="padding">
									<Label text="{{major3coreComplete}}"/>
									<Label text="complete" class="smallLabel"/>
								</StackLayout>
							</StackLayout>
							<StackLayout col="2">
								<Label text="Electives: " class="classesLabel"/>
								<StackLayout class="padding">
									<Label text="{{major3electivesComplete}}"/>
									<Label text="complete" class="smallLabel"/>
								</StackLayout>
							</StackLayout>
						</GridLayout>
						<Label text="More >" tap="viewMoreMajor3" class="more"/>
					</StackLayout>
				
						<!-- Card3 -->
					<StackLayout class="card" id="fifthCard" row="2" visibility="{{firstMinor ? 'visible' : 'collapse'}}" tap="viewMoreMinor1">
						<StackLayout orientation="horizontal">
							<Label text="Minor 1:" class="cardTitle"/>
							<Label text="{{minor1}}" class="cardTitle"/>
						</StackLayout>
						<GridLayout id="minor1grid" columns="*, *, *" rows="auto" >
							<StackLayout col="0" class="details">
								<Label text="Overall: " class="classesLabel"/>
								<StackLayout class="padding">
									<Label text="{{minor1Complete}}" class="progressNumber"/>
									<Label text="complete" class="smallLabel"/>
								</StackLayout>
							</StackLayout>
							<StackLayout col="1">
								<Label text="Core: " class="classesLabel"/>
								<StackLayout class="padding">
									<Label text="{{minor1coreComplete}}"/>
									<Label text="complete" class="smallLabel"/>
								</StackLayout>
							</StackLayout>
							<StackLayout col="2">
								<Label text="Electives: " class="classesLabel"/>
								<StackLayout class="padding">
									<Label text="{{minor1electivesComplete}}"/>
									<Label text="complete" class="smallLabel"/>
								</StackLayout>
							</StackLayout>
						</GridLayout>
						<Label text="More >" tap="viewMoreMinor1" class="more"/>
					</StackLayout>
			
						<!-- Card3 -->
					<StackLayout class="card" id="sixthCard" row="2" visibility="{{secondMinor ? 'visible' : 'collapse'}}" tap="viewMoreMinor2">
						<StackLayout orientation="horizontal">
							<Label text="Minor 2:" class="cardTitle"/>
							<Label text="{{minor2}}" class="cardTitle"/>
						</StackLayout>
						<GridLayout id="minor2grid" columns="*, *, *" rows="auto" >
							<StackLayout col="0" class="details">
								<Label text="Overall: " class="classesLabel"/>
								<StackLayout class="padding">
									<Label text="{{minor2Complete}}" class="progressNumber"/>
									<Label text="complete" class="smallLabel"/>
								</StackLayout>
							</StackLayout>
							<StackLayout col="1">
								<Label text="Core: " class="classesLabel"/>
								<StackLayout class="padding">
									<Label text="{{minor2coreComplete}}"/>
									<Label text="complete" class="smallLabel"/>
								</StackLayout>
							</StackLayout>
							<StackLayout col="2">
								<Label text="Electives: " class="classesLabel"/>
								<StackLayout class="padding">
									<Label text="{{minor2electivesComplete}}"/>
									<Label text="complete" class="smallLabel"/>
								</StackLayout>
							</StackLayout>
						</GridLayout>
						<Label text="More >" tap="viewMoreMinor2" class="more"/>
					</StackLayout>
			
						<!-- Card3 -->
					<StackLayout class="card" id="seventhCard" row="2" visibility="{{thirdMinor ? 'visible' : 'collapse'}}" tap="viewMoreMinor3">
						<StackLayout orientation="horizontal">
							<Label text="Minor 3:" class="cardTitle"/>
							<Label text="{{minor3}}" class="cardTitle"/>
						</StackLayout>
						<GridLayout id="minor3grid" columns="*, *, *" rows="auto" >
							<StackLayout col="0" class="details">
								<Label text="Overall: " class="classesLabel"/>
								<StackLayout class="padding">
									<Label text="{{minor3Complete}}" class="progressNumber"/>
									<Label text="complete" class="smallLabel"/>
								</StackLayout>
							</StackLayout>
							<StackLayout col="1">
								<Label text="Core: " class="classesLabel"/>
								<StackLayout class="padding">
									<Label text="{{minor3coreComplete}}"/>
									<Label text="complete" class="smallLabel"/>
								</StackLayout>
							</StackLayout>

							<StackLayout col="2">	
								<Label text="Electives: " class="classesLabel"/>
								<StackLayout class="padding">
									<Label text="{{minor3electivesComplete}}"/>
									<Label text="complete" class="smallLabel"/>
								</StackLayout>
							</StackLayout>
						<Label text="More >" tap="viewMoreMinor3" class="more"/>
					</GridLayout>
				</StackLayout>
					
				</StackLayout>
				</GridLayout>
			</Card:CardView>
			</StackLayout>


		 </sd:RadSideDrawer.mainContent>
		</sd:RadSideDrawer>
</Page>